pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
       echo "Questo è lo stage di Build"
      }
    }

    stage('Deploy') {
      input {
        message "Vuoi eseguire il deploy?"
        ok "Sì, esegui il deploy"
      }
      steps {
       echo "Questo è lo stage di Deploy"
      }
    }
  }
}